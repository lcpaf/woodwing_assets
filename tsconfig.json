{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./lib",
        "strict": true,
        "strictFunctionTypes": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/**"
    ]
}
